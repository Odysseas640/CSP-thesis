<instance format="XCSP3" type="CSP">
  <variables>
    <array id="X" size="[3]"> 1..3 </array>
    <var id="Y"> 8..10 </var>
  </variables>
  <constraints>
    <sum>
      <list> X[] </list>
      <coeffs> 1 2 3 </coeffs>
      <condition> (eq,Y) </condition>
    </sum>
  </constraints>
</instance>
